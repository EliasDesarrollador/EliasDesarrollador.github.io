---
import Card from "../components/Card.astro";
import { cardsData } from "../data/projects.js";
---

<div class="flex flex-col gap-y-3">
  {
    cardsData.map((card) => (
      <Card
        id={card.id}
        href={card.href}
        title={card.title}
        subtitle={card.subtitle}
        imageSrc={card.imageSrc}
        imageAlt={card.imageAlt}
      />
    ))
  }
</div>
