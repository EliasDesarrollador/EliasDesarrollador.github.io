---
import NoDataCard from "../components/NoDataCard.astro";
import SectionContainer from "../components/SectionContainer.astro";
import ArrowRight from "../icons/ArrowRight.astro";
import SocialPill from "../icons/SocialPill.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Not Found" description="Not Found">
  <SectionContainer class="px-4 dark:bg-hub-background-dark">
    <NoDataCard
      imageSrc="src/assets/img/notion/white/my-notion-face-transparent_7.png"
    />
    <div class="flex justify-center content-center items-center">
      <SocialPill
        class="px-4 mt-2 gap-1 font-medium text-sm text-white dark:text-white bg-sky-500 hover:bg-sky-400 w-auto group"
        href="/"
        target="_self"
      >
        <ArrowRight
          class="size-4 transition duration-300 ease-in-out group-hover:-rotate-180"
        />
        Go Back
      </SocialPill>
    </div>
  </SectionContainer>
</Layout>
