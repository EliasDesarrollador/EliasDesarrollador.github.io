---
const {
  id = "",
  href = "#",
  title = "Título predeterminado",
  subtitle = "Subtítulo predeterminado",
  imageSrc = "",
  imageAlt = "Imagen del documento",
} = Astro.props;
---

<a
  id={id}
  href={href}
  class="rounded-lg flex items-stretch gap-4 border-[1px] border-hub-border hover:drop-shadow-sm hover:bg-hub-light-bg-2 transition-all duration-300"
  target="_blank"
  rel="noopener noreferrer"
>
  <!-- Contenedor izquierdo: Imagen -->
  <div class="w-16 aspect-square rounded-lg overflow-hidden flex-shrink-0">
    <img src={imageSrc} alt={imageAlt} class="w-full h-full object-cover" />
  </div>

  <!-- Contenedor derecho: Información -->
  <div class="flex flex-col justify-center py-2 pr-2 flex-grow">
    <h2 class="font-medium text-base text-hub-title">{title}</h2>
    <small class="text-hub-subtitle text-xs">{subtitle}</small>
  </div>
</a>
