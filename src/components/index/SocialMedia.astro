    <SocialPill
      href="https://www.github.com/justcoddev"
      class="hover:bg-hub-light-bg-2 hover:drop-shadow-sm"
    >
      <LinkedIn class="size-4" />
    </SocialPill>
    <SocialPill
      href="https://www.github.com/justcoddev"
      class="hover:bg-hub-light-bg-2 hover:drop-shadow-sm"
